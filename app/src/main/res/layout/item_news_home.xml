<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginRight="8dp"
    android:orientation="vertical"
    app:layout_constraintBottom_toTopOf="parent"
    app:layout_constraintEnd_toStartOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/card_news_image"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:contentDescription="News Image"
            android:scaleType="centerCrop"
            app:layout_aspectRatio="178%"
            app:layout_heightPercent="50%"
            app:layout_widthPercent="100%"
            android:minHeight="256dp"
            android:minWidth="256dp"
            tools:src="@drawable/peter" />

        <TextView
            android:id="@+id/card_news_title"
            style="@style/TextAppearance.AppCompat.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="18dp"
            android:layout_marginRight="16dp"
            android:maxLines="1"
            android:text="News Title" />

        <TextView
            android:id="@+id/card_news_time"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="18dp"
            android:layout_marginRight="16dp"
            android:maxLines="1"
            android:text="News Time"
            android:textColor="@color/colorPrimaryDark" />

        <TextView
            android:id="@+id/card_news_content"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="18dp"
            android:layout_marginRight="16dp"
            android:maxLines="4"
            android:text="News Content News Content News Content News Content News Content News Content News Content News Content News Content News Content News Content News Content News Content " />


